<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bg_screen4">

    <TextView
        android:id="@+id/txtVw26"
        android:text="Photographer Details"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:textColor="#FF040106"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtxt20x"
        android:background="@layout/rounded_border_edittext"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/txtVw26"
        android:layout_marginTop="8dp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_toRightOf="@+id/txtVw27"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/txtVw27"
        android:text="Name"
        android:textSize="15dp"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        android:textColor="#FF040106"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtxt20x"
        android:layout_alignBottom="@+id/edtxt20x"
        android:layout_alignStart="@+id/txtVw28" />

    <EditText
        android:id="@+id/edtxt21x"
        android:background="@layout/rounded_border_edittext"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/txtVw27"
        android:paddingLeft="10dp"
        android:inputType="number"
        android:layout_marginTop="8dp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_toRightOf="@+id/txtVw28"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/txtVw28"
        android:text="Mobile"
        android:textSize="15dp"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        android:textColor="#FF040106"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edtxt21x"
        />

    <EditText
        android:id="@+id/edtxt22x"
        android:background="@layout/rounded_border_edittext"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:paddingLeft="10dp"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/txtVw28"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_toRightOf="@+id/txtVw29"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/txtVw29"
        android:text="Email ID"
        android:textSize="15dp"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        android:textColor="#FF040106"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtxt22x"
        android:layout_alignBottom="@+id/edtxt22x"
        android:layout_alignStart="@+id/txtVw30" />

    <TextView
        android:id="@+id/txtVw31"
        android:text="Remarks"
        android:textSize="15dp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:textColor="#FF040106"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edtxt24"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/edtxt23"
        android:background="@layout/rounded_border_edittext"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/txtVw30"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_alignBaseline="@+id/txtVw30"
        android:layout_alignBottom="@+id/txtVw30"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/edtxt24"
        android:background="@layout/rounded_border_edittext"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="350dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_toRightOf="@+id/txtVw31"
        android:layout_below="@+id/edtxt22x"
        android:layout_marginTop="56dp" />

    <TextView
        android:id="@+id/txtVw30"
        android:text="Marketing Person Name"
        android:textSize="15dp"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        android:textColor="#FF040106"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/txtVw31"
        android:layout_alignParentStart="true" />

</RelativeLayout>

    </ScrollView>